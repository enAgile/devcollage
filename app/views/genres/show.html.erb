<div id="all">
  <div id="content">
    <div class="container">
      <div class="col-md-12">
        <ul class="breadcrumb">
          <li><a href="/">Home</a></li>
          <%- if @genre.parent.present? -%>
            <li><a href="#"><%= @genre.parent.name %></a></li>
          <%- end -%>
          <li><%= @genre.name %></li>
        </ul>
      </div>

      <div class="col-md-3">
        <!-- *** MENUS AND FILTERS *** -->
        <div class="panel panel-default sidebar-menu">

          <div class="panel-heading">
            <h3 class="panel-title">Ranking</h3>
          </div>

          <div class="panel-body">
            <ul class="nav nav-pills nav-stacked category-menu">
              <li class="<%= 'active' if @genre.id == 33 %>">
                <a href="#">MOVIE</a>
                <ul>
                  <%- MovieGenre.all.each do |movie| -%>
                    <li>
                      <%- if movie.id == @genre.id -%>
                        <div style="background:#4fbfa8;"><%= link_to movie.name, genre_path(movie) %></div>
                      <%- else -%>
                        <%= link_to movie.name, genre_path(movie) %>
                      <%- end -%>
                    </li>
                  <%- end -%>
                </ul>
              </li>
              <li class="<%= 'active' if @genre.id == 34 %>">
                <a href="#">MUSIC</a>
                <ul>
                  <%- MusicGenre.all.each do |music| -%>
                    <li>
                      <%- if music.id == @genre.id -%>
                        <div style="background:#4fbfa8;"><%= link_to music.name, genre_path(music) %></div>
                      <%- else -%>
                        <%= link_to music.name, genre_path(music) %>
                      <%- end -%>
                    </li>
                  <%- end -%>
                </ul>
              </li>
            </ul>
          </div>
        </div>
        <!-- *** 検索機能用エリア
          <div class="panel panel-default sidebar-menu">
          <div class="panel-heading">
          <h3 class="panel-title">Search</h3>
          </div>
          </div>
          *** -->
          <!-- *** MENUS AND FILTERS END *** -->
      </div>

      <div class="col-md-9">
        <div class="box">
          <h1><%= @genre.name %></h1>
          <p>上位10商品を表示しています。</p>
        </div>

        <div class="row products">
          <%- @genre.top10medias.each.with_index(1) do |item, index| -%>
            <div class="col-md-4 col-sm-6">
              <div class="product">
                <div class="flip-container">
                  <div align="center">
                    <p><h3><%= index %>位</h3></p>
                    <div class="flipper">
                      <div class="front">
                        <a href="#">
                          <img src="<%= item.image %>" alt="<%= item.title %>" class="img-responsive img-category-list">
                        </a>
                      </div>
                      <div class="back">
                        <a href="#">
                          <img src="<%= item.image %>" alt="<%= item.title %>" class="img-responsive img-category-list">
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
                <a href="#" class="invisible">
                  <img src="<%= item.image %>" alt="<%= item.title %>" class="img-responsive img-category-list">
                </a>
                <div class="text">
                  <h3 class="text-category-list-title"><a href="#"><%= item.title %></a></h3>
                  <p class="price">￥<%= item.price %></p>
                  <p class="buttons">
                  <a href="#" class="btn btn-default">View detail</a>
                  <a href="basket.html" class="btn btn-primary"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                  </p>
                </div>
              </div>
            </div>
          <%- end -%>
        </div>
      </div>
    </div>
  </div>
</div>
