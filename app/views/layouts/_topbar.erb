<div id="top">
  <div class="container">
    <div class="col-md-6 offer" data-animate="fadeInDown">
      <a href="#" class="btn btn-success btn-sm" data-animate-hover="shake">Offer of the day</a>  <a href="#">Get flat 35% off on orders over $50!</a>
    </div>
    <div class="col-md-6" data-animate="fadeInDown">
      <ul class="menu">
        <%- if user_signed_in? -%>
          <%= csrf_meta_tag %>
          <li class="dropdown yamm-fw">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="200"><%= current_user.name %>さん<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <div class="yamm-content">
                <div class="row">
                  <div class="col-sm-3">
                    <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'layout-menu-font' %>
                  </div>
                </div>
              </div>
              <!-- /.yamm-content -->
            </ul>
          </li>
        <%- else -%>
          <li><a href="#" data-toggle="modal" data-target="#login-modal">Login</a>
          </li>
          <li><%= link_to new_user_registration_path do %>Register<% end %> </li>
        <%- end -%>
        <li><a href="http://www.locaworks.co.jp/recruit/index.html">Contact</a>
        </li>
      </ul>
    </div>
  </div>
  <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="true">
    <div class="modal-dialog modal-sm">

      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="Login">Customer login</h4>
        </div>
        <div class="modal-body">
          <%= form_for User.new, url: user_session_path, method: :post do |f| %>
            <div class="form-group">
              <%= f.text_field :account, class: 'form-control', placeholder: 'account' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control', placeholder: 'password' %>
            </div>

            <p class="text-center">
            <button class="btn btn-primary"><i class="fa fa-sign-in"></i> Log in</button>
            </p>
          <% end %>
          <p class="text-center text-muted">Not registered yet?</p>
          <p class="text-center text-muted"><%= link_to new_user_registration_path do %> <strong>Register now</strong> <% end %>! It is easy and done in 1&nbsp;minute and gives you access to special discounts and much more!</p>
        </div>
      </div>
    </div>
  </div>
</div>
