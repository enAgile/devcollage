<a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="200"><%= genre_type.capitalize %><b class="caret"></b></a>
<ul class="dropdown-menu">
  <li>
    <div class="yamm-content">
      <div class="row">
        <%- Genre.genres(genre_type).each_slice(15) do |genre_group| -%>
          <div class="col-sm-3">
            <ul>
              <%- genre_group.each do |genre| -%>
                <li><%= link_to genre.name, genre_path(genre) %></li>
              <%- end -%>
            </ul>
          </div>
        <%- end -%>
      </div>
    </div>
    <!-- /.yamm-content -->
  </li>
</ul>
